<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CableMaintAddActivity">

    <!-- 헤더 -->
    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="케이블 점검"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 날짜 및 시간 -->
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="2024-08-28 14:00"
        app:layout_constraintTop_toBottomOf="@+id/tv_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 점검 항목 -->
    <LinearLayout
        android:id="@+id/layout_checklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_date">

        <!-- 케이블 상태 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="케이블 상태"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <CheckBox
            android:id="@+id/check_cable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="양호"/>

        <!-- QR 상태 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR 상태"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <CheckBox
            android:id="@+id/check_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="양호"/>

        <!-- 전원 상태 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전원 상태"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <CheckBox
            android:id="@+id/check_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="양호"/>

        <!-- 추가 의견 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추가 의견"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/et_opinion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="추가 의견을 입력하세요"/>

    </LinearLayout>

    <!-- 점검자 이름 -->
    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="점검자: 홍길동"
        app:layout_constraintTop_toBottomOf="@+id/layout_checklist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 제출 버튼 -->
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="제출"
        app:layout_constraintTop_toBottomOf="@+id/tv_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_cable_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#49A617"
        android:text="정상(양호)"
        android:textColor="@android:color/white"
        android:tooltipText="상태를 변경하려면 눌러주세요"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="590dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
